{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
    "outDir": "./dist",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",

    "paths": {
      "@figma/*": ["./node_modules/@figma/types/figma/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
